@using Umbraco.Cms.Core.PropertyEditors.ValueConverters
@using Bergmania.OpenStreetMap.Core
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@{
    var content = Model.Content;
    var settings = Model.Settings;

    var backgroundColour = string.Empty;
    if (settings != null)
    {
        backgroundColour = $"bg-{settings.Value<ColorPickerValueConverter.PickedColor>("backgroundColour")?.Label.ToLower().Replace(" ", "-")}";
    }
}
<div class="py-5 @backgroundColour">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <h2 class="fw-light">@content.Value("heading")</h2>
                @content.Value("introduction")
            </div>
        </div>
        <div class="row justify-content-center g-3 mt-3">
            @(content.Value<OpenStreetMapModel>("map"))
        </div>
    </div>
</div>